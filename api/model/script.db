-- -----------------------------------------------------
-- procedure sp_login_cliente
-- -----------------------------------------------------

DELIMITER $$
USE `wish_me`$$
CREATE DEFINER=`root`@`localhost` PROCEDURE `sp_login_cliente`(
	IN p_usuario VARCHAR(100),
    IN p_senha VARCHAR(30)
)
BEGIN 
	DECLARE v_id_usuario INT;
    
    SELECT id
    INTO v_id_usuario
    FROM usuario
    WHERE usuario.usuario = p_usuario AND usuario.senha = p_senha;
    
    IF v_id_usuario IS NULL THEN
		SIGNAL SQLSTATE '45000'
        SET MESSAGE_TEXT = 'Erro: Email ou senha incorretos.';
	ELSE
		SELECT v_id_usuario AS id;
	END IF;
END$$

DELIMITER ;

